<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ImageColorAnalyser.WPF.Styles.Home"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    >

    <Style TargetType="fa:ImageAwesome">
        <Setter Property="Margin" Value=" 0 0 5 0"/>
        <Setter Property="Width" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="MenuBtnText" TargetType="TextBlock">
        <!--VerticalAlignment="Bottom" FontSize="15" FontWeight="SemiBold"-->
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>

    </Style>
    <Style x:Key="MenuBtn" TargetType="Button">
        <!--Margin="0 0 0 0" Width="100" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left"-->
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>

    </Style>
</ResourceDictionary>